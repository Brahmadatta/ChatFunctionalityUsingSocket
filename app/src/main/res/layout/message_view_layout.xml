<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_80dp">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dimen_5dp"
        android:weightSum="10">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/friend_pic"
            android:layout_gravity="top"
            android:src="@color/profile_tiles_background"
            android:padding="@dimen/dimen_5dp"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="10"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:weightSum="10"
                android:orientation="vertical"
                tools:ignore="NestedWeights">


                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:layout_height="0dp"
                    android:padding="@dimen/dimen_5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/rubik_medium"
                    android:textSize="@dimen/text_17sp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/last_unread_message"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:layout_height="0dp"
                    android:padding="@dimen/dimen_5dp"
                    android:text="@string/app_name"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/text_black_color"
                    android:fontFamily="@font/rubik_regular"
                    android:textSize="@dimen/text_12sp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/typing_status_messages"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:layout_height="0dp"
                    android:padding="@dimen/dimen_5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/text_black_color"
                    android:fontFamily="@font/rubik_regular"
                    android:textSize="@dimen/text_12sp"
                    tools:ignore="NestedWeights" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:weightSum="10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/message_count"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:background="@drawable/unread_message_drawable_background"
                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center"
                    android:textColor="@color/white" />


            </LinearLayout>




            <TextView
                android:id="@+id/lastText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:text="@string/app_name"
                android:visibility="gone"
                android:textColor="@color/relationship_text_color"
                android:fontFamily="@font/rubik_regular"
                android:padding="@dimen/dimen_5dp"/>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/ash"/>



        </LinearLayout>


       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="2"
           android:layout_gravity="bottom"
           android:gravity="center"
           android:padding="@dimen/dimen_10dp"
           android:orientation="vertical">



           <TextView
               android:visibility="gone"
               android:id="@+id/messageTime"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:gravity="center"
               android:textColor="@color/relationship_text_color"
               android:textSize="@dimen/text_12sp"
               android:fontFamily="@font/rubik_medium"/>

           <View
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dimen_1dp"
               android:layout_gravity="bottom"
               android:background="@color/ash"/>


       </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/friend_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/relationship_text_color"
            android:textSize="@dimen/text_12sp"
            android:fontFamily="@font/rubik_medium"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>